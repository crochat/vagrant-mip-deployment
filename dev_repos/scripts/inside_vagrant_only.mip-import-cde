#!/usr/bin/env bash

FEDERATION=""
PATHOLOGY=""

POSITIONAL=()
while [[ $# -gt 0 ]]; do
	case $1 in
		--federation)
			FEDERATION="$2"
			shift
			shift
			;;
		--pathology)
			PATHOLOGY="$2"
			shift
			shift
			;;
		*)
			POSITIONAL+=("$1")
			shift
			;;
	esac
done
set -- "${POSITIONAL[@]}"

ret=1

su -- mipadmin -c "mkdir -p /data/$FEDERATION"
ret=$?
if [[ $ret -eq 0 ]]; then
	if [[ "$PATHOLOGY" = "" ]]; then
		su -- mipadmin -c "cp -r /vagrant/dev_repos/mip_fed_to-be-imported_cde/* /data/$FEDERATION/"
		ret=$?
	else
		while IFS=$'\n' read -r pathology; do
			if [[ "$pathology" != "" && -d /vagrant/dev_repos/mip_fed_to-be-imported_cde/$pathology ]]; then
				su -- mipadmin -c "cp -r /vagrant/dev_repos/mip_fed_to-be-imported_cde/$pathology /data/$FEDERATION/"
			fi
		done <<< "$(echo "$PATHOLOGY" | tr ',' '\n')"
	fi
fi

exit $ret
