#!/usr/bin/env bash

ret=1
export DEBIAN_FRONTEND=noninteractive

git clone https://github.com/crochat/mc
ret=$?
if [[ $ret -eq 0 ]]; then
	cd mc
	./setup.sh
	ret=$?
fi

if [[ $ret -eq 0 ]]; then
	cd ..
	rm -rf mc
	ret=$?
fi

if [[ $ret -eq 0 && "$(command -v mc)" = "" ]]; then
	ret=1
fi

exit $ret
